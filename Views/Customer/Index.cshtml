@model IEnumerable<CommonLayer.Models.Customer>

@{
}
<a asp-action="Create" class="btn btn-success">Create</a>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Address</th>
        <th>Action</th>
    </tr>
    @foreach(var cust in Model)
            {
<tr>
    <td>@cust.Id</td>
    <td>@cust.FirstName</td>
    <td>@cust.LastName</td>
    <td>@cust.Email</td>
    <td>@cust.Mobile</td>
    <td>@cust.Address</td>
    <td>
        <a asp-action="UpdateRecord" asp-controller="Customer" asp-route-id="@cust.Id" class="btn btn-primary">Edit</a>
        <a asp-action="CustomerDetails" asp-controller="Customer" asp-route-id="@cust.Id" class="btn btn-warning">Details</a>
        <a asp-action="Delete" asp-controller="Customer" asp-route-id="@cust.Id" class="btn btn-danger" onclick="return confirm('Are you sure to delete this record')">Delete</a>

    </td>
</tr>
            }
</table>